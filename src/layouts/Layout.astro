---
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio sci-fi de Isaac" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&family=Orbitron:wght@500;700&display=swap"
			rel="stylesheet"
		/>

		<!-- Iconos-->
		<script src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js"></script>

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* ======================== PALETAS DE TEMAS ======================== */

	:root {
		--font-main: Onest, system-ui, sans-serif;
		--font-title: Onest, sans-serif;
		--background: #ffffff;
		--accent:#111111;
		--text: var(--accent);
		--primary: #ffffff;
  		--secondary: #374151;
		--gradient-start: var(--background);
		--gradient-end: #e0e0e0;
		--bg-control-bar: var(--background);

	}

	[data-theme="dark"] {
		--background: #00447A;
		--primary: var(--background);
		--accent:#ffffff;
  		--secondary: #D1D5DB;
		--bg-card: #171A1B;
		--border-color: var(--background);
		--gradient-start: var(--background);
		--gradient-end: #00203D;
		--bg-control-bar: var(--background);

	}

	[data-theme="sci-fi"] {
		--background: #011627;
		--bg-control-bar: #011627;
		--primary: var(--background);
		--accent:#0ee6b7;
  		--secondary: #7FDBFF;
		--gradient-start: #011627;
		--gradient-end: #011f45;
	}

	/* ======================== ESTILOS GLOBALES ======================== */
		.section-title {
		color: var(--accent);
		font-size: 1.5rem;
		font-style: normal;
		font-weight: 700;
		line-height: normal;
		letter-spacing: 0.2475rem;
		margin-bottom: 2rem;
		}
	section {
		margin-bottom: 10rem;
		scroll-margin-top: 4.5rem; /* Ajusta seg√∫n la altura de tu header */


	}
	html {
		font-family: var(--font-main);
		background: var(--background);
		color: var(--text);
		background-size: cover;
		background-attachment: fixed;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	*, *::before, *::after {
		box-sizing: inherit;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: var(--font-main);
		color: var(--text);
		background: var(--background);
		transition: background 0.5s ease, color 0.3s ease;
	}

	h1, h2, h3, h4 {
		font-family: var(--font-title);
		letter-spacing: 1px;
		text-transform: uppercase;
		color: var(--primary);
	}

	a {
		color: var(--primary);
		text-decoration: none;
		transition: color 0.2s;
	}

	a:hover {
		color: var(--secondary);
	}

	code, pre {
		font-family: 'Courier New', monospace;
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
	}

</style>

---
import Layout from '../layouts/Layout.astro';
import Card from '../components/sections/Card.astro';
import Header from '../components/sections/Header.astro';
import "../styles/Header.scss";
import AboutMe from '../components/sections/AboutMe.astro';
import Technologies from '../components/sections/Technologies.astro';
import Works from '../components/sections/Works.astro';
import Footer from '../components/sections/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Experience from '../components/sections/Experience.astro';
---

<Layout title="Welcome to Astro.">
	<main>
	<Header></Header>
	<Hero></Hero>
	<Technologies></Technologies>
	<Works></Works>
	<Experience></Experience>
	<AboutMe></AboutMe>
	<Footer></Footer>
	</main>
</Layout>

<style>
	html {
		background: var(--Green-Vogue-950, #00203D);
	}
	main {
	padding: 0.5rem 3rem;
	width: 100%; /* âœ… Usa 100% del contenedor sin romper el layout */
	box-sizing: border-box;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
